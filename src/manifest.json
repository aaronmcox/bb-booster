{
  "manifest_version": 2,
  "version": "0.0.0",
  "name": "BuzzerBeater Booster",

  "content_scripts": [
    {
      "matches": ["*://*.buzzerbeater.com/manage/transferlist.aspx"],
      "js": ["transferlist/transferlist.tsx"],
      "css": ["bbb.scss"]
    },
    {
      "matches": ["*://*.buzzerbeater.com/*"],
      "js": [
        "next-opponent/next-opponent.tsx"
      ],
      "css": ["bbb.scss"]
    }
  ],

  "icons": {
    "48": "assets/images/bbb-icon-48.png",
    "96": "assets/images/bbb-icon-96.png"
  },

  "permissions": [
    "storage"
  ]
}
